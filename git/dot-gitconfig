# vim: filetype=gitconfig

[core]
  #hooksPath = "~/.config/git_hooks"
  sshCommand = "ssh -i ~/.ssh/keys/amimof@users.noreply.github.com -o IdentitiesOnly=yes"

[color]
	branch = auto
	diff = auto
	status = auto
  showbranch = auto
	ui = true

[color "branch"]
	current = yellow reverse
	local = white
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[log]
	date = short

[alias]
  s = status -sb
  co = checkout
  cob = checkout -b
  com = commit
  del = branch -D 
  br = !git --no-pager branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
  undo = reset HEAD~1 --mixed
  res = !git reset --hard
  pu = !git push origin HEAD
  lg = log --graph --branches="*" --oneline --decorate=short --pretty=format:\"%C(magenta)%h%Creset -%C(auto)%d%Creset %s %C(dim white)(%cr) [%an]\"
  df = diff --color-words='[^[:space:]]'
  contrib = !git --no-pager log --pretty=short | git shortlog -e --numbered --summary
  alias = config --get-regexp ^alias.

[difftool "nvim_difftool"]
  cmd = ~/.local/share/bob/nvim-bin/nvim -c \"packadd nvim.difftool\" -c \"DiffTool $LOCAL $REMOTE\"

[diff]
  tool = nvim_difftool

[mergetool "nvim_mergetool"]
  cmd = "~/.local/share/bob/nvim-bin/nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[mergetool "nvimdiff"]
  layout = "(LOCAL,BASE,REMOTE) / MERGED"

[mergetool]
  prompt = false
  keepBackup = false

[merge]
  ; tool = nvim_mergetool
  tool = nvimdiff
  conflictstyle = diff3

[push]
  autoSetupRemote = true

[user]
	email = amimof@users.noreply.github.com
	name = Amir Mofasser
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOrcaJgxc4ZchFRR7LtKHbMaU7Pa3rsiaQfaBqxx6QyD

[commit]
	gpgsign = true

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

# Untracked gitconfig
[include]
  path = ~/.gitconfig-local
