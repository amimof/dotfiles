#Use this shell
defshell /bin/bash

# Keep scroll back lines
defscrollback 20000

# Don't display the copyright page
startup_message off

# Show a title bar at the bottom of each screen
#caption always "%{= kW} [%S] %f %t %? ( %{rY} %u %{rW} ) %?"
#caption always "%{= kw} %=%H"

# Show a list of screens on the bottom of the window
hardstatus alwayslastline '%{= bw}[ %L=%-w%45L>%{=b kW} %n%f %t %{= bw}%+w%-28= ][%D %d %M %Y %c:%s]'

# Password when locking
password 6zB01H8tNl2Mo

# Don't clear screen after leaving for example Vim
altscreen on

# Defines how long messages should be displayed
msgwait 1

# Enable monitoring of screens
defmonitor on

# Display this message when activity is detected in another screen
activity "Activity on % (%t)"

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# erase background with current bg color
defbce "on"
